<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.Main.Item"
    android:id="@+id/root_recycler_item_gallery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/gallery_post_bg"
    android:maxHeight="250dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintHeight_max="250dp">

    <ImageView
        android:id="@+id/recycler_item_gallery_iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/green_4"
        android:cropToPadding="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_item_gallery_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:minLines="1"
        android:maxLines="1"
        android:ellipsize="end"

        android:textColor="@android:color/white"
        android:text="sample"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>