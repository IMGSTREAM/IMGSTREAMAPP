<resources>


    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="decoration_color_0">@color/green_3</item>
        <item name="decoration_color_1">@color/green_0</item>
        <item name="decoration_color_2">@color/green_4</item>
        <item name="background_color">@color/blue_4</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="colorPrimary">@color/green_2</item>
        <item name="colorPrimaryDark">@color/green_4</item>
        <item name="colorAccent">@color/green_3</item>

        <item name="colorButtonNormal">@color/green_2</item>

        <item name="android:colorControlActivated">@color/green_2</item>
        <item name="android:colorControlNormal">@color/green_2</item>

        <item name="android:thumbTint">@color/green_2</item>
        <item name="android:textColorPrimaryDisableOnly">@color/green_2</item>
        <item name="android:textColor">@color/green_2</item>

        <item name="decoration_color_0">@color/green_3</item>
        <item name="decoration_color_1">@color/green_0</item>
        <item name="decoration_color_2">@color/green_4</item>
        <item name="background_color">@color/grey_dark</item>
        <!-- <item name="buttonStyle">@style/AppTheme.Imagen</item> -->
    </style>

    <style name="AppTheme.Main.Content" parent="AppTheme.Main">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/blue_4</item>
        <item name="android:scrollbarThumbVertical">@color/green_3</item>
        <item name="android:scrollbarTrackVertical">@color/blue_4</item>

        <item name="decoration_color_0">@color/green_3</item>
        <item name="decoration_color_1">@color/green_0</item>
        <item name="decoration_color_2">@color/green_4</item>
        <item name="background_color">@color/blue_4</item>

    </style>

    <style name="AppTheme.Main.Item" parent="AppTheme.Main">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/transparent</item>

        <item name="decoration_color_0">@color/grey_light</item>
        <item name="decoration_color_1">@color/grey_light</item>
        <item name="decoration_color_2">@color/grey_light</item>
        <item name="background_color">@color/grey_dark</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_theme</item>
    </style>

</resources>
